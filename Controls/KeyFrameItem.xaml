<UserControl x:Class="WpfCssControlLibrary.Controls.CssKeyFrameItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" FontSize="11"
             d:DesignHeight="600" d:DesignWidth="780">

    <GroupBox BorderBrush="DarkBlue" BorderThickness="1">
        <GroupBox.Header>
            <TextBlock x:Name="ItemHeadText" Text="{Binding Path=ItemHead, Mode=OneWay}"></TextBlock>
        </GroupBox.Header>
        <WrapPanel Orientation="Horizontal"  HorizontalAlignment="Left" VerticalAlignment="Top" >

            <Expander Header="Text Shadow" Margin="2">
                <StackPanel>
                    <!--inset-->

                    <!--hORIZONATAL OFFSET-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Horizontal Offset" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="TextShadowHorizontalTextBox" Margin="3" Width="50" 
                     Text="{Binding Path=TextShadowHorizontalValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="textshadowhorizontal" >
                            </Button>

                        </Grid>
                    </ContentControl>
                    <!--Vertical Distance-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Vertical Offset" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="TextShadowVerticalTextBox" Margin="3" Width="50" 
                     Text="{Binding Path=TextShadowVerticalValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="textshadowvertical" >
                            </Button>

                        </Grid>
                    </ContentControl>
                    <!--blur distance-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Blur Distance" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="TextBlurDistanceTextBox" Margin="3" Width="50" 
                                          Text="{Binding Path=TextShadowBlurDistanceValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="textshadowblurdistance" >
                            </Button>


                        </Grid>
                    </ContentControl>
                    <!--spread distance-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Spread Distance" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="TextSpreadDistanceTextBox" Margin="3" Width="50" 
                                          Text="{Binding Path=TextShadowSpreadDistanceValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="textshadowspreaddistance" >
                            </Button>


                        </Grid>
                    </ContentControl>
                    <Button x:Name="TextShadowColorButton" Content="Text Shadow Color"
                         Width="125" HorizontalAlignment="Left" Margin="2"
                        Grid.ColumnSpan="2" Click="TextShadowColorButton_OnClick"
                         Height="28">

                    </Button>
                </StackPanel>
            </Expander>

            <Expander Header="Box Shadow" Margin="2">
                <StackPanel>
                    <!--inset-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <CheckBox  x:Name="InsetCheckBox" Margin="3" Width="50" IsThreeState="False" Content="Inset" Grid.Row="0" Grid.Column="1"
                                           Checked="InsetCheckBox_OnChecked" Unchecked="InsetCheckBox_OnUnchecked" />
                            </StackPanel>
                        </Grid>
                    </ContentControl>
                    <!-- hORIZONATAL OFFSET -->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Horizontal Offset" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="ShadowHorizontalTextBox" Margin="3" Width="50" 
                     Text="{Binding Path=BoxShadowHorizontalValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="boxshadowhorizontal" >
                            </Button>

                        </Grid>
                    </ContentControl>
                    <!-- Vertical Distance-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Vertical Offset" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="ShadowVerticalTextBox" Margin="3" Width="50" 
                     Text="{Binding Path=BoxShadowVerticalValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="boxshadowvertical" >
                            </Button>

                        </Grid>
                    </ContentControl>
                    <!-- blur distance -->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Blur Distance" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="BlurDistanceTextBox" Margin="3" Width="50" 
                                          Text="{Binding Path=BoxShadowBlurDistanceValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="boxshadowblurdistance" >
                            </Button>


                        </Grid>
                    </ContentControl>
                    <!-- spread distance -->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Spread Distance" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding ShadowSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="SpreadDistanceTextBox" Margin="3" Width="50" 
                                          Text="{Binding Path=BoxShadowSpreadDistanceValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="boxshadowspreaddistance" >
                            </Button>


                        </Grid>
                    </ContentControl>
                    <Button x:Name="BoxShadowColorButton" Content=" Shadow Color"
                         Width="125" HorizontalAlignment="Left" Margin="2"
                        Grid.ColumnSpan="2" Click="BoxShadowColorButton_OnClick"
                         Height="28">

                    </Button>
                </StackPanel>
            </Expander>

            <Expander Header="Basic Box Settings" Margin="2">
                <StackPanel>
                    <!--height-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Height" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="HeightTextBox" Margin="3" Width="50" 
                     Text="{Binding Path=ContentsHeightValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="height" >
                            </Button>

                        </Grid>
                    </ContentControl>
                    <!--maxheight-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Max-height" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="MaxHeightTextBox" Margin="3" Width="50" 
                     Text="{Binding Path=ContentsMaxHeightValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="max-height" >
                            </Button>

                        </Grid>
                    </ContentControl>
                    <!--minheight-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Text="Min-Height" Margin="3" Grid.Row="0" Grid.Column="0" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
                                <TextBox  x:Name="MinHeightTextBox" Margin="3" Width="50" 
                     Text="{Binding Path=ContentsMinHeightValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" Grid.Row="0" Grid.Column="2"
                        Click="DeleteItemClick"
                        Tag="min-height" >
                            </Button>

                        </Grid>
                    </ContentControl>
                    <!--width-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Width" Margin="3" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0"  >
                                <TextBox 
                     x:Name="WidthTextBox" Margin="3" Width="50"
                     Text="{Binding Path=ContentsWidthValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="width" >
                            </Button>
                        </Grid>
                    </ContentControl>
                    <!--MaxWidth-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Max-width" Margin="3" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0"  >
                                <TextBox 
                     x:Name="MaxWidthTextBox" Margin="3" Width="50"
                     Text="{Binding Path=ContentsMaxWidthValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="max-width" >
                            </Button>
                        </Grid>
                    </ContentControl>
                    <!--MinWidth-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Min-width" Margin="3" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0"  >
                                <TextBox 
                     x:Name="MinWidthTextBox" Margin="3" Width="50"
                     Text="{Binding Path=ContentsMinWidthValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="Min-width" >
                            </Button>
                        </Grid>
                    </ContentControl>

                    <!--Top-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Top" Margin="3" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0"   >
                                <TextBox 
                     x:Name="TopBox" Margin="3" Width="50"
                     Text="{Binding Path=ContentsTopValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="top" >
                            </Button>
                        </Grid>
                    </ContentControl>
                    <!--bottom-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Bottom" Margin="3" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0"   >
                                <TextBox  
                     x:Name="BottomBox" Margin="3" Width="50"
                     Text="{Binding Path=ContentsBottomValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="bottom" >
                            </Button>
                        </Grid>
                    </ContentControl>
                    <!--Left-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Left" Margin="3" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" >
                                <TextBox  
                     x:Name="LeftBox" Margin="3" Width="50"
                     Text="{Binding Path=ContentsLeftValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="left" >
                            </Button>
                        </Grid>
                    </ContentControl>
                    <!--Right-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Right" Margin="3" MinWidth="{Binding BoxSettingsLabelWidth, Mode=OneWay}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0"  >
                                <TextBox 
                     x:Name="RightBox" Margin="3" Width="50"
                     Text="{Binding Path=ContentsRightValue, Mode=TwoWay}">
                                </TextBox>
                                <TextBlock  Text="px" Margin="2,3,2,3"></TextBlock>
                            </StackPanel>
                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="right" >
                            </Button>
                        </Grid>
                    </ContentControl>

                </StackPanel>
            </Expander>

            <Expander Header="More Box Settings">
                <StackPanel>
                    <!--clip-->
                    <ContentControl>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Expander ExpandDirection="Down" >
                                <Expander.Header>
                                    <TextBlock Text="Clip"  Margin="3"></TextBlock>
                                </Expander.Header>
                                <WrapPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Horizontal" MaxHeight="30"  >
                                        <TextBlock Text="Top" Margin="1,2,2,1"></TextBlock>
                                        <TextBox x:Name="ClipTopBox" Margin="1,2,2,1" Width="40" 
                                                 Text="{Binding Path=ClipTopValue, Mode=TwoWay}">
                                        </TextBox>
                                        <TextBlock  Text="px," Margin="1,2,2,1"></TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" MaxHeight="30"  >
                                        <TextBlock Text="Right" Margin="1,2,2,1"></TextBlock>
                                        <TextBox x:Name="ClipRightBox" Margin="3"
                                                 Width="40" Text="{Binding Path=ClipRightValue, Mode=TwoWay}">
                                        </TextBox>
                                        <TextBlock  Text="px," Margin="1,2,2,1"></TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" MaxHeight="30"  >
                                        <TextBlock Text="Bottom" Margin="1,2,2,1"></TextBlock>
                                        <TextBox x:Name="ClipBottomBox" Margin="3" Width="40" 
                                                 Text="{Binding Path=ClipBottomValue, Mode=TwoWay}">
                                        </TextBox>
                                        <TextBlock  Text="px," Margin="1,2,2,1"></TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" MaxHeight="30"  >
                                        <TextBlock Text="Left" Margin="1,2,2,1"></TextBlock>
                                        <TextBox x:Name="ClipLeftBox" Margin="3" Width="40" 
                                                 Text="{Binding Path=ClipLeftValue, Mode=TwoWay}">
                                        </TextBox>
                                        <TextBlock  Text="px" Margin="1,2,2,1"></TextBlock>
                                    </StackPanel>


                                </WrapPanel>
                            </Expander>

                            <Button Content="X" Height="25" Width="15" FontWeight="ExtraBold" 
                        Grid.Row="0" Grid.Column="2" Click="DeleteItemClick"
                        Tag="clip" >
