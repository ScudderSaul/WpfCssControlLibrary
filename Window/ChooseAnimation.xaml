<Window x:Class="Css_Classes2019.Window.ChooseAnimation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Animation" Height="400" Width="400">
    <ScrollViewer>
        <Border BorderBrush="LightBlue" BorderThickness="2">
            <StackPanel>
                <Button HorizontalAlignment="Right" Margin="4" BorderBrush="Blue" BorderThickness="1" x:Name="CloseButton"
                    Content="Close" Click="CloseButton_OnClick"></Button>
                <WrapPanel x:Name="ChooseWrapPanel">

                </WrapPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
